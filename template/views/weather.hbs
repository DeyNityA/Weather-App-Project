<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
  <!-- jQuery library -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://kit.fontawesome.com/c976e2c281.js" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="../../public/css/style.css" />

  <title>Document</title>
</head>

<body>
  {{>header}}


  <div class="container main_header ">
    <div class="row ">

      <div class="col-md-6 col-10 mx-auto text-center">
        <form method="get" class="navbar-form m-5" id="form">
          <input class="form-control-lg col-8 bg-dark text-light" type="search" name="city"
            placeholder="Search Your City" aria-label="Search">
          <button class="btn btn-outline-success  btn-lg" type="submit" id="btn">Search</button>
        </form>

        <div class="main-cont mx-auto m-5">

          <div id="weathericon">
            {{#if objdata.weather}}
            {{#each objdata.weather}}
            {{#if_eq this.main 'Sunny'}}
            <i class="fas fa-sun fa-4x" style="color: #eccc68;">
              <h2>{{this.main}}</h2>
            </i>
            {{else if_eq this.main 'Rain'}}
            <i class="fas fa-cloud-rain fa-4x" style="color: #697ca1">
              <h2>{{this.main}}</h2>
            </i>
            {{else if_eq this.main 'Clouds'}}
            <i class="fas fa-cloud fa-4x" style="color: #d4d5d8">
              <h2>{{this.main}}</h2>
            </i>
            {{else if_eq this.main 'Haze'}}
            <i class="fas fa-cloud-sun fa-4x" style="color: #a4a5a8">
              <h2>{{this.main}}</h2>
            </i>
            {{else}}
            <i class="fas fa-sun fa-4x" style="color: #eccc68;">
              <h2>{{this.main}}</h2>
            </i>

            {{/if_eq}}
            {{/each}}

            {{else if objdata.message}}
            {{#if_eq objdata.message 'city not found' }}
            <h1>{{objdata.message}}</h1>

            {{else}}
            <h1>Enter Your City Before Searching</h1>
            {{/if_eq}}

            {{else}}
            <h1>Get Weather Details Here</h1>

            {{/if}}
          </div>

          <div class="info">
            <h2 class="location"><i class="fa-solid fa-street-view fa-2x"></i>{{objdata.name}}, {{objdata.sys.country}}
            </h2>
            <p id="date">date</p>
            <h1 class="temp ">
              {{#if objdata.main.temp}}
              {{objdata.main.temp}}<sup>o</sup>c
              {{else}}
              {{/if}}
            </h1>
            <h3 class="tempmin_max  p-3">
              {{#if objdata.main.temp}}
              Min {{objdata.main.temp_min}}<sup>o</sup>c | Max{{objdata.main.temp_max}}<sup>o</sup>c
              {{else}}
              {{/if}}
            </h3>
          </div>
        </div>

      </div>
    </div>
  </div>
  {{>footer}}
  <script src="../../public/js/main.js"></script>
</body>

</html>